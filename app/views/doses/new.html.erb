<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <div class="form-group">
          <%= f.input :description %>
        </div>
        <div class="form-group">
          <%= f.association :cocktail %>
        </div>
        <div class="form-group">
          <%= f.association :ingredient %>
        </div>
        <div class="form-group">
          <%= f.submit "Add dose!!" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
