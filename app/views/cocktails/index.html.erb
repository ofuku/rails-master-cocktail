<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card col-xs-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.photo %>);">
        <div class="card-category"><%= cocktail.name %></div>
        <div class="card-description">
          <p><%= link_to "see this cocktail", cocktail_path(cocktail) %></p>

        </div>
      </div>
    <% end %>
  </div>
</div>
